

number = int(input("Give me a number: "))
check = int(input("Give me checker: "))
if number % 2 == 0:
    print("Number is even")
if number % 4 == 0:
    print("Number is divided by 4")
if number % check == 0:
        print("This number is also divided by " + str(check))
else:
    print("Number is odd")
